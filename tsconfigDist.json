{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es6", "dom", "es2019"],
    "jsx": "react-jsx",
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strict": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "allowJs": false,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "__mocks__",
    "node_modules",
    "**/__tests__/*",
    "Dangerfile.ts",
    "src/AppExample.tsx",
    "src/examples/**/*",
    "src/index.tsx",
    "src/setupTests.ts"
  ]
}
